
<table id="orders" width="90%" border="1" style="margin-left: auto;margin-right: auto;">
  <thead>
  <tr>
    <th>
      Customer Name
    </th>
    <th>
      Order Date
    </th>
    <th>
      Number of items
    </th>
    <th>
      Actions
    </th>
  </tr>
  </thead>
  <tbody>

  <% (Order.all || []).each do |order|%>
      <tr>
        <td><%= order.customer.name.titleize %></td>
        <td><%= order.order_date.strftime('%d %b, %Y') %></td>
        <td><%= order.order_details.length %></td>
        <td>
          <%= link_to 'View' , "/orders/#{order.id}" %>
          <%= link_to 'Edit' , "/orders/#{order.id}/edit" %>
          <%= link_to 'Delete' , "/orders/#{order.id}/destroy" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function(){
        $('#orders').DataTable();
    });
</script>